# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/rsm_master

# Server
NODE_ENV=development
PORT=3000

# JWT
JWT_SECRET=change-me-in-production-min-32-chars

# Session
SESSION_SECRET=change-me-in-production-min-32-chars

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Features
ENABLE_DEBUG_LOGS=true

# Redis Cache
REDIS_URL=redis://:change-me-in-production@localhost:6379
REDIS_PASSWORD=change-me-in-production

# Stripe Payment (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_SECRET_HERE

# Resend Email (get from https://resend.com/api-keys)
RESEND_API_KEY=re_YOUR_KEY_HERE
RESEND_FROM_EMAIL=noreply@yourdomain.com

# AI Services (optional - for chatbot)
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY_HERE
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_KEY_HERE

# Cloudinary (for file uploads - get from https://cloudinary.com/console)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_UPLOAD_PRESET=rsm_audio_uploads
