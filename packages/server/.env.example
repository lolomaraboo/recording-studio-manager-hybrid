# Server Configuration
PORT=3001
NODE_ENV=production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/rsm_master

# Redis
REDIS_URL=redis://localhost:6379

# Qdrant Vector Database (for chatbot RAG)
QDRANT_URL=http://localhost:6333

# OpenAI API (for chatbot + embeddings)
OPENAI_API_KEY=sk-...

# Session
SESSION_SECRET=your-secret-key-change-in-production

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/organizations/YOUR_ORG/projects/recording-studio-manager/
SENTRY_DSN_BACKEND=https://YOUR_KEY@sentry.io/YOUR_PROJECT_ID

# Stripe Configuration
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Webhooks
# Local testing: Run `stripe listen --forward-to http://localhost:3001/api/webhooks/stripe`
# Production: Configure webhook endpoint in Stripe Dashboard
STRIPE_WEBHOOK_SECRET=whsec_...

# App URL (for Stripe Checkout redirect URLs)
APP_URL=http://localhost:5174

# Resend Email Service
# Get API key from: https://resend.com/api-keys
# Free tier: 3,000 emails/month, 100 emails/day
# Verify email domain in Resend dashboard (add DNS records)
RESEND_API_KEY=re_...
EMAIL_DOMAIN=recording-studio-manager.com
STUDIO_NAME=Your Studio Name

# AWS S3 Storage (for invoice PDFs)
# Create bucket in AWS Console or via Terraform
# Enable versioning and encryption at rest
# IAM permissions: s3:PutObject, s3:GetObject
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=eu-west-3
S3_BUCKET_NAME=rsm-invoices-prod
