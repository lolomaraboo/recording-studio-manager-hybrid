# Server Configuration
PORT=3001
NODE_ENV=production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/rsm_master

# Redis
REDIS_URL=redis://localhost:6379

# Qdrant Vector Database (for chatbot RAG)
QDRANT_URL=http://localhost:6333

# OpenAI API (for chatbot + embeddings)
OPENAI_API_KEY=sk-...

# Session
SESSION_SECRET=your-secret-key-change-in-production

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/organizations/YOUR_ORG/projects/recording-studio-manager/
SENTRY_DSN_BACKEND=https://YOUR_KEY@sentry.io/YOUR_PROJECT_ID

# Stripe Configuration
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Webhooks
# Local testing: Run `stripe listen --forward-to http://localhost:3001/api/webhooks/stripe`
# Production: Configure webhook endpoint in Stripe Dashboard
STRIPE_WEBHOOK_SECRET=whsec_...

# App URL (for Stripe Checkout redirect URLs)
APP_URL=http://localhost:5174
