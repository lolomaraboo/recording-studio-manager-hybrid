{
  "name": "@rsm/database",
  "version": "0.1.0",
  "type": "module",
  "description": "Database schemas and connection management (PostgreSQL + Drizzle ORM)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./master": {
      "types": "./dist/master/index.d.ts",
      "import": "./dist/master/index.js"
    },
    "./tenant": {
      "types": "./dist/tenant/index.d.ts",
      "import": "./dist/tenant/index.js"
    },
    "./connection": {
      "types": "./dist/connection.d.ts",
      "import": "./dist/connection.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "check": "tsc --noEmit",
    "dev": "tsc --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:init": "tsx src/scripts/init.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@rsm/shared": "workspace:*",
    "drizzle-orm": "^0.44.5",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
